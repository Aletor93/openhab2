{
    "template": "<style>\n.caret#hue-controller-caret {\n  position: absolute;\n  left: 90%;\n  top: 45%;\n}\n.hue-select {\n  padding-right: 10px;\n}\n.action-button#single-button {\n  border: 1px solid;\n  overflow: hidden;\n  width: 100%;\n  border-radius: 5px;\n  font-size: 18px;\n  font-weight: normal;\n}\nul.dropdown-menu#hue-controller-dropdown {\n  text-align: center;\n  border: 0px;\n  border-radius: 5px;\n  width: 100%;\n} \nul.dropdown-menu#hue-controller-dropdown li {\n  border-collapse: separate;\n  padding: 5px;\n  border-radius: inherit;  \n} \n</style>\n\n<!-- Defined scenes -->\n<div ng-init=\"sceneMap={\n\t'180,1,100': 'Full',\n\t'81,56,100': 'Normal',\n\t'5,91,78': 'Savanna Sunset',\n\t'37,47,48': 'Tropical Twilight', \n\t'225,99,53': 'Arctic Aurora', \n\t'320,57,84': 'Spring Blossom', \n\t'74,78,56': 'Relax', \n\t'84,47,100': 'Read', \n\t'181,21,100': 'Concentrate', \n\t'187,98,100': 'Energize', \n\t'82,55,100': 'Bright', \n\t'82,55,30': 'Dimmed', \n\t'82,55,0': 'Nightlight'\n}\" />\n\n<div>\n  <!-- Display name (if not hidden) and on/off -->\n  <div class=\"row\">\n\t\t<div ng-if=\"config.bulb_name_hidden != true\">\n      <div class=\"col-xs-8\">\n          <span ng-style=\"{ 'font-size': config.bulb_name_font_size+'pt' }\"  class=\"value\">{{config.bulb_name}}</span>\n      </div>\n      <div class=\"col-xs-4\">\n        <div ng-init='onoff={\"name\": \"OnOff\", \"item\": config.oh_bulb_brightness, \"hidelabel\": true, \"hideonoff\": true, \"iconset\": \"smarthome-set\", \"icon\": \"bulb\"}'>\n          <widget-switch ng-model=\"onoff\" />\n        </div>\n      </div>\n    </div>\n\t\t<div ng-if=\"config.bulb_name_hidden == true\">\n      <div class=\"col-xs-12\">\n        <div ng-init='onoff={\"name\": \"OnOff\", \"item\": config.oh_bulb_brightness, \"hidelabel\": true, \"hideonoff\": true, \"iconset\": \"smarthome-set\", \"icon\": \"bulb\"}'>\n          <widget-switch ng-model=\"onoff\" />\n        </div>\n      </div>\n    </div>\n  </div>\n  \n  <!-- Display Brightness -->\n  <div class=\"row\">\n  \t<div class=\"col-xs-12\">\n      <div class=\"slider-div\" ng-init='oh_bulb_brightness = {\"name\": \"Brightness\", \"item\": config.oh_bulb_brightness, \"floor\" : 0, \"ceil\": 100, \"step\": 1, \"hidelabel\" : false, \"hidelimits\": \"true\"}'>\n        <widget-slider ng-model=\"oh_bulb_brightness\"/>\n      </div>\n    </div>\n  </div>\n\n  <!-- Display Color settings  (if not hidden) -->\n  <div ng-if=\"config.bulb_white_only != true\">\n    <uib-tabset active=\"activeJustified\" justified=\"true\">\n      <!-- First tab -->\n      <uib-tab index=\"0\" heading=\"Color\">\n        <!-- Display color options (picker and temp) -->\n        <div class=\"row\">\n          <div class=\"col-xs-4\">\n            <div ng-init='oh_bulb_color = {\"item\": config.oh_bulb_color,\"style\":\"aCKolor\"}'>\n              <widget-colorpicker ng-model=\"oh_bulb_color\" />\n            </div>\n          </div>\n          <div class=\"col-xs-8\">\n            <div class=\"slider-div\" ng-init='oh_bulb_color_temperature={\"name\": \"Color temp.\", \"item\": config.oh_bulb_color_temperature, \"floor\" : 0, \"ceil\": 100, \"step\": 1, \"hidelabel\" : false, \"hidelimits\": \"true\" }'>\n              <widget-slider ng-model=\"oh_bulb_color_temperature\"/>\n            </div>\n          </div>\n        </div>\n      </uib-tab>\n      <!-- Second tab -->\n      <uib-tab index=\"1\" heading=\"Scenes\">\n        <div class=\"row\">\n          <div class=\"col-xs-12\">\n            <br />\n            <div style=\"width: 100%;\" class=\"btn-group\" uib-dropdown>\n              <button id=\"single-button\" type=\"button\" class=\"action-button\" uib-dropdown-toggle>\n                <span id=\"hue-select\">{{sceneMap[itemValue(config.oh_bulb_color)]}}</span><span class=\"caret pull-right\" id=\"hue-controller-caret\"></span>\n                <!-- If actual value isn't found in scene list -->\n                <span id=\"hue-select\" ng-if=\"sceneMap[itemValue(config.oh_bulb_color)] == NULL\">Unknown ({{itemValue(config.oh_bulb_color)}})</span>\n              </button>\n              <ul class=\"dropdown-menu\" id=\"hue-controller-dropdown\" uib-dropdown-menu role=\"menu\" aria-labelledby=\"single-button\">\n                <li role=\"menuitem\" ng-repeat=\"(state, label) in sceneMap\">\n                  <a ng-click=\"sendCmd(config.oh_bulb_color, state)\">{{label}}</a>\n                </li>                \n              </ul>\n            </div>\n            <br />\n            <br />\n            <br />\n          </div>\n        </div>\n      </uib-tab>\n    </uib-tabset>\n  </div>\n</div>",
    "settings": [
        {
            "type": "heading",
            "id": "heading_widget_settings",
            "label": "Widget's settings"
        },
        {
            "type": "string",
            "id": "bulb_name",
            "label": "Bulb's name",
            "description": "",
            "default": "Default_name"
        },
        {
            "type": "number",
            "id": "bulb_name_font_size",
            "label": "Bulb's name font size",
            "default": "26"
        },
        {
            "type": "checkbox",
            "id": "bulb_name_hidden",
            "label": "Hide name ?",
            "default": false,
            "description": "Hide Bulb's name on top"
        },
        {
            "type": "heading",
            "id": "heading_bulb_settings",
            "label": "Bulb's settings",
            "description": ""
        },
        {
            "type": "item",
            "id": "oh_bulb_brightness",
            "label": "Bulb's brightness item",
            "description": ""
        },
        {
            "type": "checkbox",
            "id": "bulb_white_only",
            "label": "White bulb ?",
            "description": "",
            "default": false
        },
        {
            "type": "heading",
            "id": "heading_color_settings",
            "label": "Color properties",
            "description": "Used if 'bulb_white_only' is unchecked"
        },
        {
            "type": "item",
            "id": "oh_bulb_color",
            "label": "Bulb's color item",
            "description": ""
        },
        {
            "type": "item",
            "id": "oh_bulb_color_temperature",
            "label": "Bulb's color temperature item",
            "description": ""
        }
    ],
    "author": "Alexandre Vallarino - Based on Tim Rogers and Kersten Tams work",
    "description": "17/08/2017 build",
    "name": "Widget Xiaomi Yeelight"
}